<Window x:Class="RateYourMeeting.WriteComment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RateYourMeeting"
        mc:Ignorable="d"
        Title="Skriv kommentar" Height="320" Width="400" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid>
        <RichTextBox x:Name="boxComment" HorizontalAlignment="Center" Height="190" Margin="0,40,0,0" VerticalAlignment="Top" Width="372">
            <FlowDocument>
                <Paragraph>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label x:Name="labelComment" Content="Comment" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonComment" Content="Comment" HorizontalAlignment="Left" Margin="122,243,0,0" VerticalAlignment="Top" Width="75" Background="White" Foreground="#FF0CB623" BorderBrush="#FF44DC4B"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="202,243,0,0" VerticalAlignment="Top" Width="75" Foreground="#FF5F5F5F" Background="White"/>

    </Grid>
</Window>
